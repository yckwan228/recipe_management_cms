plugin.tx_recipemanagement_recipes {

    view {
        templateRootPaths.0 = EXT:recipe_management/Resources/Private/Templates/
        templateRootPaths.1 = {$plugin.tx_recipemanagement_recipes.view.templateRootPath}
        partialRootPaths.0 = EXT:recipe_management/Resources/Private/Partials/
        partialRootPaths.1 = {$plugin.tx_recipemanagement_recipes.view.partialRootPath}
        layoutRootPaths.0 = EXT:recipe_management/Resources/Private/Layouts/
        layoutRootPaths.1 = {$plugin.tx_recipemanagement_recipes.view.layoutRootPath}
    }
    persistence {
        storagePid = {$plugin.tx_recipemanagement_recipes.persistence.storagePid}
        #recursive = 1
    }
    features {
        #skipDefaultArguments = 1
        # if set to 1, the enable fields are ignored in BE context
        ignoreAllEnableFieldsInBe = 0
    }
    mvc {
        #callDefaultActionIfActionCantBeResolved = 1
    }
}

# these classes are only used in auto-generated templates
plugin.tx_recipemanagement._CSS_DEFAULT_STYLE (
    textarea.f3-form-error {
        background-color:#FF9F9F;
        border: 1px #FF0000 solid;
    }

    input.f3-form-error {
        background-color:#FF9F9F;
        border: 1px #FF0000 solid;
    }

    .tx-recipe-management table {
        border-collapse:separate;
        border-spacing:10px;
    }

    .tx-recipe-management table th {
        font-weight:bold;
    }

    .tx-recipe-management table td {
        vertical-align:top;
    }

    .typo3-messages .message-error {
        color:red;
    }

    .typo3-messages .message-ok {
        color:green;
    }
)

# Module configuration
module.tx_recipemanagement_web_recipemanagementrecipes {
    persistence {
        storagePid = {$module.tx_recipemanagement_recipes.persistence.storagePid}
    }
    view {
        templateRootPaths.0 = EXT:recipe_management/Resources/Private/Backend/Templates/
        templateRootPaths.1 = {$module.tx_recipemanagement_recipes.view.templateRootPath}
        partialRootPaths.0 = EXT:recipe_management/Resources/Private/Backend/Partials/
        partialRootPaths.1 = {$module.tx_recipemanagement_recipes.view.partialRootPath}
        layoutRootPaths.0 = EXT:recipe_management/Resources/Private/Backend/Layouts/
        layoutRootPaths.1 = {$module.tx_recipemanagement_recipes.view.layoutRootPath}
    }
}
    config.no_cache = 1
